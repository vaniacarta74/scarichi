{
    "define": {
        "system": {
            "timeout": 7200,
            "memory_limit": "2048M"
        },
        "log": {
            "debug_level": 2,
            "log_path": "/../../log",
            "error_log": "error.log"
        },
        "csv": {
            "nodata": -9999,        
            "maxrecord": 10000,        
            "subdirectory": true
        }
    },
    "modelli": {
        "1": {
            "base": "data_e_ora",
            "dati": [
                "livello"
            ],
            "calcoli": {
                "delta": [
                    "data_e_ora"
                ],
                "media": [
                    "livello"
                ]
            },
            "formule": {
                "altezza": [
                    "media livello"
                ],
                "portata": [
                    "altezza"
                ],
                "volume": [
                    "portata",
                    "delta"
                ]
            }
        },
        "2": {
            "base": "data_e_ora",
            "dati": [
                "livello",
                "manovra"
            ],
            "calcoli": {
                "delta": [
                    "data_e_ora"
                ],
                "media": [
                    "livello"
                ]
            },
            "formule": {
                "altezza": [
                    "media livello"
                ],
                "portata": [
                    "altezza",
                    "manovra"
                ],
                "volume": [
                    "portata",
                    "delta"
                ]
            }
        },
        "3": {
            "base": "data_e_ora",
            "dati": [
                "livello",
                "livello valle",
                "manovra"
            ],
            "calcoli": {
                "delta": [
                    "data_e_ora"
                ],
                "media": [
                    "livello",
                    "livello valle"
                ]
            },
            "formule": {
                "altezza": [
                    "media livello",
                    "media livello valle"
                ],
                "portata": [
                    "media livello",
                    "altezza",
                    "manovra"
                ],
                "volume": [
                    "portata",
                    "delta"
                ]
            }
        }
    },
    "command": { 
        "sintax": "php scarichi.php",
        "url": "http://localhost/telecontrollo/scarichi/github/src/index.php",
        "async": true
    },
    "global": {
        "section_types": [
            "short",
            "long",
            "params",
            "default",
            "pardef",
            "variables",
            "costants",
            "options",
            "descriptions"
        ],
        "sections": [            
            "pardef",
            "options",
            "descriptions"
        ],
        "offset": "2"
    },
    "parameters": {
        "help": {
            "name": "help",
            "short": "h",
            "long": "help",
            "default": "",
            "options": {
                "variables": [],
                "costants": [],
                "limits": [],
                "alias": []
            },
            "regex": "",
            "descriptions": [
                "Stampa questo help."
            ],
            "type": "single"
        },
        "version": {
            "name": "version",
            "short": "v",
            "long": "version",
            "default": "",
            "options": {
                "variables": [],
                "costants": [],
                "limits": [],
                "alias": []
            },
            "regex": "",
            "descriptions": [
                "Stampa il numero di versione."
            ],
            "type": "single"
        },
        "default": {
            "name": "default",
            "short": "d",
            "long": "default",
            "default": "",
            "options": {
                "variables": [],
                "costants": [],
                "limits": [],
                "alias": []
            },
            "regex": "",
            "descriptions": [
                "Esegue il calcolo con i parametri di default."
            ],
            "type": "single"
        },
        "var": {
            "name": "variabile",
            "short": "V",
            "long": "var",
            "default": "ALL",
            "options": {
                "variables": [
                    "var1",
                    "var2"
                ],
                "costants": [
                    "ALL"
                ],
                "limits": [],
                "alias": [
                    "tutti"
                ]
            },
            "regex": "\/^[0-9]{5}([,][0-9]{5})*$\/",
            "descriptions": [
                "Esegue il calcolo per ciascuna delle variabili",
                "<var> o per tutte (ALL). Default ALL."
            ],
            "type": "group"
        },
        "datefrom": {
            "name": "datefrom",
            "short": "f",
            "long": "datefrom",
            "default": "1D",
            "options": {
                "variables": [
                    "data"
                ],
                "costants": [
                    "D",
                    "W",
                    "M",
                    "Y"
                ],
                "limits": [
                    "364",
                    "51",
                    "11",
                    "9"
                ],
                "alias": [
                    "giorno",
                    "settimana",
                    "mese",
                    "anno"
                ]
            },
            "regex": "\/^([0-9]{2}[\\/][0-9]{2}[\\/][0-9]{4}|([1-9]|[1-9][0-9]|[1-2][0-9][0-9]|[3][0-5][0-9]|[3][6][0-4])[D]|([1-9]|[1-4][0-9]|[5][0-1])[W]|([1-9]|[1][0-1])[M]|[1-9][Y])$\/",
            "descriptions": [
                "Esegue il calcolo da <data> o per [1-n] giorni(D),",
                "settimane(W), mesi(M) o anni(Y). Default 1D."
            ],
            "type": "group"
        },
        "dateto": {
            "name": "dateto",
            "short": "t",
            "long": "dateto",
            "default": "NOW",
            "options": {
                "variables": [
                    "data"
                ],
                "costants": [
                    "NOW"
                ],
                "limits": [],
                "alias": [
                    "oggi"
                ]
            },
            "regex": "\/^[0-9]{2}[\\/][0-9]{2}[\\/][0-9]{4}$\/",
            "descriptions": [
                "Esegue il calcolo sino a <data> o sino ad oggi",
                "(NOW). Default NOW."
            ],
            "type": "group"
        },
        "field": {
            "name": "campo",
            "short": "c",
            "long": "campo",
            "default": "V",
            "options": {
                "variables": [],
                "costants": [
                    "V",
                    "L",
                    "M",
                    "D",
                    "H",
                    "Q"
                ],
                "limits": [],
                "alias": [
                    "volume",
                    "livello",
                    "media",
                    "delta",
                    "altezza",
                    "portata"
                ]  
            },
            "regex": "\/^[V|L|M|D|H|Q]$\/",
            "descriptions": [
                "Esporta i dati di volume(V), livello(L), media(M)",
                "delta(D), altezza(H) o portata(Q). Default V."
            ],
            "type": "group"
        },
        "full": {
            "name": "no zero",
            "short": "n",
            "long": "nozero",
            "default": "FALSE",
            "options": {
                "variables": [],
                "costants": [
                    "TRUE",
                    "FALSE"
                ],
                "limits": [],
                "alias": [
                    "1",
                    "0"
                ]
            },
            "regex": "\/^((TRUE)|(FALSE))$\/",
            "descriptions": [
                "Esporta solo i valori diversi da zero (TRUE) o",
                "tutti i valori (FALSE). Default FALSE."
            ],
            "type": "group"
        }
    }
}
