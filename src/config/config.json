{
    "define": {
        "system": {
            "timeout": 7200,
            "memory_limit": "2048M"
        },
        "log": {
            "debug_level": 2,
            "log_path": "/../../log",
            "error_log": "error.log"
        },        
        "csv": {
            "nodata": -9999,        
            "maxrecord": 10000,        
            "subdirectory": false
        },
        "services": {
            "tocsv": {
                "host": "LOCALHOST",
                "path": "scarichi/tocsv.php",
                "params": {
                    "tocsv": {
                        "id": {
                            "tosend": false,
                            "default": null
                        },
                        "var": {
                            "tosend": true,
                            "default": null
                        },
                        "datefrom": {
                            "tosend": true,
                            "default": null
                        },
                        "dateto": {
                            "tosend": true,
                            "default": null
                        },
                        "full": {
                            "tosend": true,
                            "default": 1
                        },
                        "field": {
                            "tosend": true,
                            "default": "volume"
                        }
                    }
                },                
                "method": "GET",
                "key": "id",
                "isJson": false,
                "isAsync": true,
                "printf": "formatResponse",
                "withBody": true,
                "header": {
                    "title": "Procedura esportazione CSV dati movimentazioni dighe",
                    "start": "Elaborazione iniziata in data:"
                },
                "footer": {
                    "stop": "Elaborazione terminata in data:",
                    "time": "Tempo di elaborazione:",
                    "report": "Numero totale file csv esportati:"
                }
            },
            "telegram_REST": {
                "host": "REMOTE_HOST",
                "path": "telecontrollo/bot/telegram_REST.php",
                "params": {
                    "sync": {
                        "token": {
                            "tosend": true,
                            "default": "sync"
                        },
                        "variabile": {
                            "tosend": true,
                            "default": "ALL"
                        },
                        "db": {
                            "tosend": true,
                            "default": 1
                        },
                        "tipodato": {
                            "tosend": true,
                            "default": 1
                        },
                        "delay": {
                            "tosend": true,
                            "default": 168
                        },
                        "tel": {
                            "tosend": true,
                            "default": 1
                        }
                    },
                    "watchdog": {
                        "token": {
                            "tosend": true,
                            "default": "watchdog"
                        },
                        "tipologia": {
                            "tosend": true,
                            "default": "scarichi"
                        },
                        "host": {
                            "tosend": true,
                            "default": 1
                        },
                        "move": {
                            "tosend": true,
                            "default": 0
                        },
                        "variabile": {
                            "tosend": true,
                            "default": "ALL"
                        },
                        "metodo": {
                            "tosend": true,
                            "default": "array"
                        },
                        "tel": {
                            "tosend": true,
                            "default": 1
                        }
                    }
                },
                "method": "GET",
                "key": "token",
                "isJson": false,
                "isAsync": false,
                "printf": "formatResponse",
                "withBody": false,                
                "header": {},
                "footer": {}
            }
        },
        "telegram": {
            "scarichi": {
                "header": {
                    "title": {
                        "global": "CALCOLO VOLUMI E PORTATE MOVIMENTAZIONI DIGHE",
                        "sync": "Procedura sincronizzazione banche dati",
                        "tocsv": "Procedura calcolo ed esportazione dati",
                        "watchdog": "Procedura caricamento dati"
                    },
                    "start": "Elaborazione iniziata in data:"
                },
                "footer": {
                    "stop": "Elaborazione terminata in data:",
                    "time": "Tempo di elaborazione:",
                    "report": {
                        "sync": {
                            "in": "TOTALI:",
                            "out": "Totali:"
                        },
                        "tocsv": {
                            "in": "Numero totale file csv",
                            "out": "Totali:"
                        },
                        "watchdog": {
                            "in": "TOTALI:",
                            "out": "Totali:"
                        }
                    }
                }
            },
            "admittedTags": [
                "b",
                "strong",
                "i",
                "u",
                "ins",
                "s",
                "a",
                "code",
                "pre"
            ],
            "tagLimit": 100,
            "limit": 4096,
            "send": false,
            "global": true, 
            "path": "/../../../telegram.json",
            "url": "scarichi/telegram.php"
        },
        "watchdog": {
            "iterations": 12,
            "delay": 5000000
        }
    },
    "command": { 
        "sintax": "php scarichi.php",
        "period": "99Y",
        "offset": "1D"
    },
    "modelli": {
        "1": {
            "base": "data_e_ora",
            "dati": [
                "livello"
            ],
            "calcoli": {
                "delta": [
                    "data_e_ora"
                ],
                "media": [
                    "livello"
                ]
            },
            "formule": {
                "altezza": [
                    "media livello"
                ],
                "portata": [
                    "altezza"
                ],
                "volume": [
                    "portata",
                    "delta"
                ]
            },
            "sommatorie": {
                "cumulato": [
                    "volume"
                ]
            }
        },
        "2": {
            "base": "data_e_ora",
            "dati": [
                "livello",
                "manovra"
            ],
            "calcoli": {
                "delta": [
                    "data_e_ora"
                ],
                "media": [
                    "livello"
                ]
            },
            "formule": {
                "altezza": [
                    "media livello"
                ],
                "portata": [
                    "altezza",
                    "manovra"
                ],
                "volume": [
                    "portata",
                    "delta"
                ]
            },
            "sommatorie": {
                "cumulato": [
                    "volume"
                ]
            }
        },
        "3": {
            "base": "data_e_ora",
            "dati": [
                "livello",
                "livello valle",
                "manovra"
            ],
            "calcoli": {
                "delta": [
                    "data_e_ora"
                ],
                "media": [
                    "livello",
                    "livello valle"
                ]
            },
            "formule": {
                "altezza": [
                    "media livello",
                    "media livello valle"
                ],
                "portata": [
                    "media livello",
                    "altezza",
                    "manovra"
                ],
                "volume": [
                    "portata",
                    "delta"
                ]
            },
            "sommatorie": {
                "cumulato": [
                    "volume"
                ]
            }
        }
    },    
    "global": {
        "section_types": [
            "short",
            "long",
            "params",
            "default",
            "pardef",
            "variables",
            "costants",
            "options",
            "descriptions"
        ],
        "sections": [            
            "pardef",
            "options",
            "descriptions"
        ],
        "offset": "2"
    },
    "parameters": {
        "help": {
            "name": "help",
            "short": "h",
            "long": "help",
            "default": "",
            "options": {
                "variables": [],
                "costants": [],
                "limits": [],
                "alias": []
            },
            "regex": "",
            "descriptions": [
                "Stampa questo help."
            ],
            "type": "single"
        },
        "version": {
            "name": "version",
            "short": "v",
            "long": "version",
            "default": "",
            "options": {
                "variables": [],
                "costants": [],
                "limits": [],
                "alias": []
            },
            "regex": "",
            "descriptions": [
                "Stampa il numero di versione."
            ],
            "type": "single"
        },
        "default": {
            "name": "default",
            "short": "d",
            "long": "default",
            "default": "",
            "options": {
                "variables": [],
                "costants": [],
                "limits": [],
                "alias": []
            },
            "regex": "",
            "descriptions": [
                "Esegue il calcolo con i parametri di default."
            ],
            "type": "single"
        },
        "var": {
            "name": "variabile",
            "short": "V",
            "long": "var",
            "default": "ALL",
            "options": {
                "variables": [
                    "var1",
                    "var2"
                ],
                "costants": [
                    "ALL"
                ],
                "limits": [],
                "alias": [
                    "tutti"
                ]
            },
            "regex": "\/^[0-9]{5}([,][0-9]{5})*$\/",
            "descriptions": [
                "Esegue il calcolo per ciascuna delle variabili",
                "<var> o per tutte (ALL). Default ALL."
            ],
            "type": "group"
        },
        "datefrom": {
            "name": "datefrom",
            "short": "f",
            "long": "datefrom",
            "default": "1D",
            "options": {
                "variables": [
                    "data"
                ],
                "costants": [
                    "Y",
                    "M",
                    "W",
                    "D"
                ],
                "limits": [
                    "9",
                    "11",
                    "51",
                    "364"
                ],
                "alias": [
                    "anno",
                    "mese",
                    "settimana",
                    "giorno"
                ]
            },
            "regex": "\/^([0-9]{2}[\\/][0-9]{2}[\\/][0-9]{4}|([1-9][Y])?(([1-9]|[1][0-1])[M])?(([1-9]|[1-4][0-9]|[5][0-1])[W])?(([1-9]|[1-9][0-9]|[1-2][0-9][0-9]|[3][0-5][0-9]|[3][6][0-4])[D])?)$\/",
            "descriptions": [
                "Esegue il calcolo da <data> o per [1-n] anni(Y),",
                "mesi(M), settimane(W) e/o giorni(D). Default 1D."
            ],
            "type": "group"
        },
        "dateto": {
            "name": "dateto",
            "short": "t",
            "long": "dateto",
            "default": "NOW",
            "options": {
                "variables": [
                    "data"
                ],
                "costants": [
                    "NOW"
                ],
                "limits": [],
                "alias": [
                    "oggi"
                ]
            },
            "regex": "\/^[0-9]{2}[\\/][0-9]{2}[\\/][0-9]{4}$\/",
            "descriptions": [
                "Esegue il calcolo sino a <data> o sino ad oggi",
                "(NOW). Default NOW."
            ],
            "type": "group"
        },
        "field": {
            "name": "campo",
            "short": "c",
            "long": "campo",
            "default": "V",
            "options": {
                "variables": [],
                "costants": [
                    "L",
                    "LV",
                    "P",
                    "ML",
                    "MLV",
                    "H",
                    "Q",
                    "D",                    
                    "V",
                    "C"
                ],
                "limits": [],
                "alias": [
                    "livello",
                    "livello valle",
                    "manovra",
                    "media livello",
                    "media livello valle",
                    "altezza",
                    "portata",
                    "delta",                    
                    "volume",
                    "cumulato"
                ]  
            },
            "regex": "\/^([L][V]?|[P]|[M][L][V]?|[H]|[Q]|[D]|[V]|[C])$\/",
            "descriptions": [
                "Esporta i dati di volume(V), livello(L), media(M), delta(D)",
                "altezza(H), portata(Q), manovra(P) o cumulato(C). Default V."
            ],
            "type": "group"
        },
        "full": {
            "name": "no zero",
            "short": "n",
            "long": "nozero",
            "default": "FALSE",
            "options": {
                "variables": [],
                "costants": [
                    "TRUE",
                    "FALSE"
                ],
                "limits": [],
                "alias": [
                    "1",
                    "0"
                ]
            },
            "regex": "\/^((TRUE)|(FALSE))$\/",
            "descriptions": [
                "Esporta solo i valori diversi da zero (TRUE) o",
                "tutti i valori (FALSE). Default FALSE."
            ],
            "type": "group"
        }
    }
}
